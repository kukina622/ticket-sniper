{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "vite.main.config.ts",
    "vite.preload.config.ts",
    "forge.config.ts",
    "src/main/main.ts",
    "src/preload/preload.ts",
    "*.d.ts"
  ]
}
